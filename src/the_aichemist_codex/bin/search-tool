#!/usr/bin/env python3
"""Executable wrapper for the Aichemist Codex Search Tool CLI."""

import sys


def main():
    """Execute the Aichemist Codex Search Tool CLI."""
    try:
        from the_aichemist_codex.cli.search_tool import main as search_tool_main

        sys.exit(search_tool_main())
    except ImportError as e:
        print(f"Error: Failed to import the Aichemist Codex Search Tool: {e}")
        print("\nPossible fixes:")
        print("1. Make sure the package is installed: pip install the-aichemist-codex")
        print("2. Check your Python path")
        print(
            "3. If you're developing the package, try running: python -m the_aichemist_codex.cli.search_tool"
        )
        sys.exit(1)
    except Exception as e:
        print(f"Error starting the Aichemist Codex Search Tool: {e}")
        sys.exit(1)


if __name__ == "__main__":
    main()
