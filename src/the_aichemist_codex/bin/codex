#!/usr/bin/env python3
"""Executable wrapper for the Aichemist Codex CLI."""

import sys


def main():
    """Execute the Aichemist Codex CLI."""
    try:
        from the_aichemist_codex.backend.cli import main as cli_main

        sys.exit(cli_main())
    except ImportError as e:
        print(f"Error: Failed to import the Aichemist Codex CLI: {e}")
        print("\nPossible fixes:")
        print("1. Make sure the package is installed: pip install the-aichemist-codex")
        print("2. Check your Python path")
        print(
            "3. If you're developing the package, try running: python -m the_aichemist_codex"
        )
        sys.exit(1)
    except Exception as e:
        print(f"Error starting the Aichemist Codex CLI: {e}")
        sys.exit(1)


if __name__ == "__main__":
    main()
